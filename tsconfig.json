{
  "compilerOptions": {
      "target": "ES2017",
      "module": "esnext",
      "lib": ["es2017", "dom", "es2018.regexp"],
      "outDir": "dist/js/",
      "jsx": "react",
      "sourceMap": true,
      "incremental": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "typeRoots": ["./node_modules/@types", "./types"],
      "baseUrl": ".",
      "paths": {
          "prop-types": ["node_modules/@types/prop-types"],
          "react": ["node_modules/@types/react"],
          "react-dom": ["node_modules/@types/react-dom"],
          "rxjs": ["types/rx"],
          "module": ["node_modules/@types/node/module.d.ts"],
          "lib/react": ["lib/react/dev/index.js"],
          "lib/rxjs": ["lib/rxjs/rxjs.min.js"]
      }
  },
  "include": [
      "./src/**/*",
      "./lib/**/*"
  ]
}
