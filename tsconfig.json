{
  "compilerOptions": {
      "target": "ES2017",
      "module": "esnext",
      "lib": ["es2017", "dom", "es2018.regexp"],
      "outDir": "dist/js/",
      "jsx": "react",
      "sourceMap": true,
      "incremental": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "typeRoots": ["./types"],
      "baseUrl": ".",
      "paths": {
          "scheduler": ["types/scheduler"],
          "scheduler/tracing": ["types/scheduler/tracing.d.ts"],
          "csstype": ["types/csstype"],
          "prop-types": ["types/prop-types"],
          "react": ["types/react"],
          "react-dom": ["types/react-dom"],
          "rxjs": ["types/rx"],
      }
  },
  "include": [
      "src/**/*"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["ES2019", "dom"],
      "target": "ES2019"
    }
  }
}
