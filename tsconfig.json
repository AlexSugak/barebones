{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist/js/",
        "jsx": "react",
        "sourceMap": true,
        "incremental": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "typeRoots": ["./types"],
        "baseUrl": ".",
        "paths": {
            "scheduler": ["types/scheduler"],
            "scheduler/tracing": ["types/scheduler/tracing.d.ts"],
            "csstype": ["types/csstype"],
            "prop-types": ["types/prop-types"],
            "react": ["types/react"],
            "react-dom": ["types/react-dom"],
            "rxjs": ["types/rx"],
        }
    },
    "include": [
        "src/**/*"
    ]
}
